# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET         /                     controllers.WidgetController.index

# An example controller showing a sample home page
GET         /rest                 controllers.RestController.index

# Treat the text following the "/" as the parameter to command.
GET         /rest/:command        controllers.RestController.command(command: String)

GET         /widgets              controllers.WidgetController.listWidgets
PUT         /widgets              controllers.RestController.command(command: String)
POST        /widgets              controllers.WidgetController.createWidget

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file         controllers.Assets.versioned(file)
